<%- model_class = TodoItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<h2><%= @todo_list.title %></h2>

<table class="todo_items">
	<% @todo_list.todo_items.each do |todo_item| %>
	<tr id="<%= dom_id(todo_item) %>">
		<td><%= todo_item.content %></td>
        <td><%= link_to "Edit", edit_todo_list_todo_item_path(todo_item), :class => 'btn btn-primary btn-xs' %></td>
        <td><%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?" }, :class => 'btn btn-danger btn-xs' %></td>
        <td><%= link_to "Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch, :class => 'btn btn-xs btn-success' %></td>
	</tr>
	<% end %>
</table>

<p>
	<%= link_to "New Todo Item", new_todo_list_todo_item_path, :class => 'btn btn-primary' %>
</p>
